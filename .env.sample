# =============================================================================
# Elara AI Personal Stylist - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your API keys
# Never commit .env file to version control!

# =============================================================================
# OpenAI Configuration (REQUIRED)
# =============================================================================
OPENAI_API_KEY=sk-proj-your_key_here
OPENAI_REASONING_MODEL=gpt-4o
OPENAI_MINI_MODEL=gpt-4o-mini
OPENAI_EMBED_MODEL=text-embedding-3-large

# =============================================================================
# Weather API (OPTIONAL - has fallback)
# =============================================================================
OPENWEATHER_API_KEY=your_openweather_key_here
WEATHER_UNITS=metric  # or imperial

# =============================================================================
# Database & Cache (match docker-compose.yml)
# =============================================================================
PG_DSN=postgresql://elara:elara@localhost:5435/elara
REDIS_URL=redis://localhost:6380/0

# =============================================================================
# Product Search APIs (OPTIONAL but recommended for production)
# =============================================================================

# Google Shopping API (via Google Custom Search)
# Get keys at: https://console.cloud.google.com/apis/credentials
# Setup guide: https://developers.google.com/custom-search/v1/overview
GOOGLE_SHOPPING_API_KEY=your_google_api_key_here
GOOGLE_SHOPPING_CX=your_custom_search_engine_id_here

# =============================================================================
# Affiliate Networks (OPTIONAL - for monetization only)
# =============================================================================
# Leave these empty if you don't need affiliate links
# The system works perfectly fine without them!

# Rakuten Advertising: https://rakutenadvertising.com/
# RAKUTEN_API_KEY=your_rakuten_api_key_here
# RAKUTEN_ACCOUNT_ID=your_rakuten_account_id_here

# Impact.com: https://impact.com/
# IMPACT_API_KEY=your_impact_api_key_here
# IMPACT_ACCOUNT_ID=your_impact_account_id_here

# ShareASale: https://www.shareasale.com/
# SHARESALE_AFFILIATE_ID=your_sharesale_affiliate_id_here

# =============================================================================
# Rate Limiting & Performance
# =============================================================================
MAX_REQUESTS_PER_MINUTE=30
SCRAPER_DELAY_SECONDS=2.0

# Product Search Configuration
# Disable ASOS or web scrapers if they cause issues (timeouts, blocks, etc.)
ENABLE_ASOS_SEARCH=true        # Set to false to disable ASOS API
ENABLE_WEB_SCRAPERS=true       # Set to false to disable Zara/H&M scrapers

# =============================================================================
# Application Settings
# =============================================================================
DEFAULT_CURRENCY=USD
